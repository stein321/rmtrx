<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cap.mizzou.rmtrx.development"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="14"/>

    <application
            android:name=".rmtrxDevelopmentApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.rmtrx.Light">
        <activity
                android:name="cap.mizzou.rmtrx.app.ui.HomeActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="cap.mizzou.rmtrx.app.grocery.GroceryActivity"
                android:label="@string/grocery_list_activity_name">
        </activity>
        <activity
                android:name="cap.mizzou.rmtrx.app.Messages.MessagesActivity"
                android:label="@string/messages_activity_name">
        </activity>
        <activity
                android:name="cap.mizzou.rmtrx.app.MainActivity"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name="cap.mizzou.rmtrx.app.DisplayMessageActivity"
                android:label="@string/title_activity_display_message"
                android:parentActivityName="cap.mizzou.rmtrx.app.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="cap.mizzou.rmtrx.app.MainActivity"/>
        </activity>
    </application>

</manifest>
